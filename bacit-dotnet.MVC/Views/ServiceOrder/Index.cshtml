@model bacit_dotnet.MVC.Models.ServiceOrdre.Serviceform
<h1>Oversikt</h1>

<p>
    <a asp-controller="ServiceOrder" asp-action="Create">Create new Serviceform</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th></th>
        </tr>
    </thead>

    @if (Model != null)
    {
        foreach (var item in Model.serviceform)
        {
            <tbody>
                <tr>
                    <td>
                        @item.OrderId
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.ProductName
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-itemid="@item.OrderId">Edit</a> |
                        <a asp-action="Details" asp-route-itemid="@item.OrderId">Details</a> |
                        <a asp-action="Delete" asp-route-itemid="@item.OrderId">Delete</a>
                    </td>
                </tr>
            </tbody>
        }
    }
</table>

@if (Model != null)
{
    foreach (var item in Model.serviceform)
    {
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderId)
            </dt>
            <dd class="col-sm-10">
                @item.OrderId
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @item.FirstName
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @item.LastName
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @item.PhoneNumber
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @item.Email
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-10">
                @item.ProductName
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductType)
            </dt>
            <dd class="col-sm-10">
                @item.ProductType
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PreferredTimePeriod)
            </dt>
            <dd class="col-sm-10">
                @item.PreferredTimePeriod
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comment)
            </dt>
            <dd class="col-sm-10">
                @item.Comment
            </dd>
        </dl>

    }
}

