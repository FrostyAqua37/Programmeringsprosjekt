@model bacit_dotnet.MVC.Models.ServiceOrdre.Serviceform
<h1>Oversikt</h1>

<p>
    <a asp-controller="ServiceOrder" asp-action="Create">Create new Serviceform</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th></th>
        </tr>
    </thead>


    @if (Model != null)
    {
        foreach (var item in Model.serviceform)
        {

            <tbody>
                <tr>
                    <td>
                      @item.OrderId
                    </td>
                    <td>
                     @item.Email
                    </td>
                    <td>
                     @item.ProductName
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-itemid="@item.OrderId">Edit</a> |
                        <a asp-action="Details" asp-route-itemid="@item.OrderId">Details</a> |
                        <a asp-action="Delete" asp-route-itemid="@item.OrderId">Delete</a>
                    </td>
                </tr>
            </tbody>
            }
        }
        </table>

