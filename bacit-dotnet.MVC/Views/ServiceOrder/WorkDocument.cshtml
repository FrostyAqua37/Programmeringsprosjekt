@model bacit_dotnet.MVC.Models.ServiceOrdre.Serviceform

@{
    ViewData["Title"] = "WorkDocument";
}

<h1>Work Document</h1>


@Html.AntiForgeryToken()
@Html.ValidationSummary()

<form asp-action="WorkDocument" method="post">
    <label asp-for="Week">Booket service til Uke:</label>
    <input asp-for="Week" class="form-control" placeholder="Skriv inn Uke her" />
    <br />

    <label asp-for="Inquiry">Henvendelse mottat og reg. ddmmåå:</label>
    <input asp-for="Inquiry" class="form-control" />
    <br />

    <label asp-for="Order">Bestilling/feilbeskrivelse fra kunde</label>
    <input asp-for="Order" class="form-control" />
    <br />

    <label asp-for="CustomerInfo">KundeInfo</label>
    <input asp-for="CustomerInfo" class="form-control" />
    <br />

    <label asp-for="PlannedDelivery">Avtalt levering (dd.mm.åå)</label>
    <input type="date" asp-for="PlannedDelivery" class="form-control" />
    <br />

    <label asp-for="ProductReceivedDate">Produkt mottatt (dd.mm.åå)</label>
    <input type="date" asp-for="ProductReceivedDate" class="form-control" />
    <br />

    <label asp-for="AgreedCompletionDate">Avtalt ferdigstillelse innen dd.mm.åå</label>
    <input type="date" asp-for="AgreedCompletionDate" class="form-control" />
    <br />

    <label asp-for="ServiceCompletedDate">Service ferdig. (dd.mm.åå)</label>
    <input type="date" asp-for="ServiceCompletedDate" class="form-control" />
    <br />

    <label asp-for="ServiceHours"> Antall timer på utført service</label>
    <input asp-for="ServiceHours" class="form-control" />
    <br />

    <label asp-for="CaseCompleted">Case ferdig?</label>
    <br />
    <select asp-for="CaseCompleted">
        <option value="" selected disabled></option>
        <option value="True">Ja</option>
        <option value="False">Nei</option>
    </select>
    <br />

    <label asp-for="HasOrderNumber">Ordrenr</label>
    <br />
    <select asp-for="HasOrderNumber">
        <option value="" selected disabled></option>
        <option value="True">Ja</option>
        <option value="False">Nei</option>
    </select>
    <br />

    <label asp-for="HasServiceForm">Serviceskjema</label>
    <br />
    <select asp-for="HasServiceForm">
        <option value="" selected disabled></option>
        <option value="True">Ja</option>
        <option value="False">Nei</option>
    </select>
    <br />

    <br />
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@foreach (var item in Model.workDocument)
{
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Week)
        </dt>
        <dd class="col-sm-10">
            @item.Week
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class="col-sm-10">
            @item.Order
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inquiry)
        </dt>
        <dd class="col-sm-10">
            @item.Inquiry
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseCompleted)
        </dt>
        <dd class="col-sm-10">
            @(item.CaseCompleted?"Ja":"Nei")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerInfo)
        </dt>
        <dd class="col-sm-10">
            @item.CustomerInfo
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Week)
        </dt>
        <dd class="col-sm-10">
            @item.Week
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlannedDelivery)
        </dt>
        <dd class="col-sm-10">
            @item.PlannedDelivery
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AgreedCompletionDate)
        </dt>
        <dd class="col-sm-10">
            @item.AgreedCompletionDate
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceCompletedDate)
        </dt>
        <dd class="col-sm-10">
            @item.ServiceCompletedDate
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceHours)
        </dt>
        <dd class="col-sm-10">
            @item.ServiceHours
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HasOrderNumber)
        </dt>
        <dd class="col-sm-10">
            @(item.HasOrderNumber?"Ja":"Nei")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HasServiceForm)
        </dt>
        <dd class="col-sm-10">
            @(item.HasServiceForm?"Ja":"Nei")
        </dd>
    </dl>
}


